<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turismo Senati"
            android:textAlignment="center"
            android:textColor="#003366"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_turismo"
            android:scaleType="center"
            android:layout_marginTop="25dp"
            android:layout_marginVertical="10dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opciones Principales"
                    android:textColor="#003366"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btnRegistrarSitios"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/alexandrite"
                    android:text="Registrar Sitios"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_location"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnRegistrarClientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/brunette"
                    android:text="Registrar Clientes"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_person"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnRegistrarReservas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#1976D2"
                    android:text="Registrar Reservas"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_calendar"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/btnConsultarReservas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/adobe"
                    android:text="Consultar Reservas"
                    android:textAllCaps="true"
                    app:icon="@drawable/ic_search"
                    android:padding="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 Turismo Senati"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_red"
            android:text="Cerrar la Sesion"
            android:textAllCaps="false"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>